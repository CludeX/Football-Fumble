<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/about"
        android:layout_below="@+id/about"
        android:layout_marginTop="56dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text="@string/app_name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:textSize="@dimen/title2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/about"
        android:layout_alignBottom="@+id/about"
        android:layout_alignRight="@+id/textView3"
        android:onClick="aboutGame"
        android:text="@string/about_game"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="@dimen/text" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/start"
        android:layout_alignBottom="@+id/start"
        android:layout_marginLeft="34dp"
        android:layout_toRightOf="@+id/start"
        android:onClick="startGame"
        android:text="@string/start_game"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="@dimen/text" />

    <Button
        android:id="@+id/exit"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_toLeftOf="@+id/textView3"
        android:background="@drawable/ball_200"
        android:onClick="endGame"
        android:textSize="@dimen/text" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignRight="@+id/textView4"
        android:onClick="endGame"
        android:text="@string/exit_game"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="@dimen/text" />

    <Button
        android:id="@+id/about"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/start"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/textView3"
        android:background="@drawable/ball_200"
        android:onClick="aboutGame"
        android:textSize="@dimen/text" />

    <Button
        android:id="@+id/start"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="62dp"
        android:background="@drawable/ball_200"
        android:height="@dimen/height2"
        android:onClick="startGame"
        android:textColor="#D80000"
        android:textSize="@dimen/text" />

</RelativeLayout>